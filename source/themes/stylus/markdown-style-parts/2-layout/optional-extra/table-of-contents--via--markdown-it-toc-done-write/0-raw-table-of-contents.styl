{_selectorOf_tocByMarkdownItTOCDoneRight} {

    & {
        font-size: 0.8rem;
        box-sizing: border-box;
        width: tocPanel_defaultWidth;
        max-width: 100%;
        height: 100%;
        padding: 3rem 0.5rem 2rem 0.5rem;
        overflow: auto;

        position: fixed;
        left: 0;
        top: 0;
        margin: 0;
        // scroll-behavior: smooth;
    }

    li > a[href^="#"] {
        display: block;
        padding: 0.25em 0.5em 0.25em 2em;
        border-width: 1px 0;
        border-style: solid none;
        margin: 0 0 0 -1.5em;
        text-decoration: none;
        transition-property: color, background-color, border-color;
        transition-duration: 0.36s;
        transition-timing-function: ease-out;
    }

    li {
        cursor: pointer;
        margin: 0;
    }

    > ul,
    > ol {

        & {
            box-sizing: border-box;
            height: 100%;
            overflow: auto;
            padding: 0.5rem 1.5rem 4.5rem 2rem;
            margin: 0;
            white-space: nowrap;
        }
    }

    &.should-show-2-levels-at-most {

        > ul,
        > ol {

            ol, ul {

                ol, ul {
                    display: none;
                }
            }
        }
    }
}
