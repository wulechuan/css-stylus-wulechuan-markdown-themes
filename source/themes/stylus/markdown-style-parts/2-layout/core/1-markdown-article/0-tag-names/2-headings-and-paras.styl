{__wrappingSelectorOf_markdownArticleLayoutRules} {

    h1, h2, h3, h4, h5, h6, dt {
        padding-top: 0.5em;
        padding-bottom: 0.5em;
        border-width: 0;
        line-height: 1.5;
    }

    h1 {
        font-size: 2.7rem;
        margin-top: 2em;
        margin-bottom: 0.5em;
        padding-top: 0.25em;
        padding-bottom: 0.25em;
    }

    h2 {
        font-size: 2.2rem;
        margin-top: 3em;
        margin-bottom: 0.5em;
    }

    h3 {
        font-size: 1.7rem;
        margin-top: 2em;
        margin-bottom: 0.3em;
    }

    h4 {
        font-size: 1.3rem;
        margin-top: 2em;
        margin-bottom: 0.5em;
    }

    h5 {
        font-size: 1.1rem;
        margin-top: 1.5em;
        margin-bottom: 0.5em;
    }

    h6 {
        font-size: 1em;
        margin-top: 1.5em;
        margin-bottom: 0.5em;
    }



    h5 + h6 {
        margin-top: 0;
    }

    h4 + h5,
    h3 + h4,
    h2 + h3 {
        margin-top: -0.5em;
    }

    h1 + h2 {
        // Nothing
    }

    // hr + h6,
    // hr + h5,
    // hr + h4,
    // hr + h3,
    // hr + h2,
    // hr + h1 {
    //     margin-top: 1em;
    // }



    blockquote, th, td, {

        > h6,
        > h5,
        > h4,
        > h3,
        > h2,
        > h1 {
            margin-top: 0.75em;
            margin-bottom: 0.25em;
            padding-top: 0.25em;
            padding-bottom: 0.25em;

            &:first-child {
                margin-top: 0.25em;
            }
        }
    }




    p {
        margin-top: 0.5em;
        margin-bottom: 0.5em;
        padding-top: 0.25em;
        padding-bottom: 0.25em;
    }
}
