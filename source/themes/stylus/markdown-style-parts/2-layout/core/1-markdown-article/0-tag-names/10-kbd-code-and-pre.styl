{__wrappingSelectorOf_markdownArticleLayoutRules} {

    kbd, code {
        display: inline-block;
        vertical-align: baseline;
        line-height: 1;
        min-height: 1em;
        min-width: 0.5em;
        font-weight: normal;
        font-style: normal;
        border-style: solid;
    }

    code { // inline code phrases
        word-break: break-all;
    }


    pre {
        
        &,
        > code, // source code blocks
        > code * {
            white-space: pre;
            word-wrap: normal;
            word-break: keep-all;
            text-align: left !important;
        }


        > code { // source code blocks
            line-height: inherit;
            padding: 0.5em 1em;
            border: none !important;
            margin: 0 !important;
            border-radius: 0;
        }

        > code * {
            // Don't know why it is 0.2em, instead of 0.25em.
            // But these paddingTop & paddingBottom below do work.
            padding: 0.2em 0;
        }
    }



    pre {
        line-height: 1.6;
        margin-left: 1rem;
        margin-right: 1rem;

        // The 2 lines below are for better alignments
        // of list-style dots, when a <pre> is a child of a <li>.
        display: inline-block;
        vertical-align: top;


        width: calc(100% - 2rem);
        
        overflow-x: auto;
        padding: 0;
        margin-top: 0.5rem;
        margin-bottom: 2rem;
    }


    td,
    li {

        > pre {
            margin-left: 0;
            margin-right: 0;
            width: 100%;
        }
    }

    li {

        > pre:first-child {
            margin-top: 0; // maybe 0.25em is better?
        }

        > pre:last-child {
            margin-bottom: 1rem;
        }
    }

    blockquote,
    td {

        > pre:last-child {
            margin-bottom: 0.5rem;
        }
    }

    p + pre {
        margin-top: 0;
    }
}
