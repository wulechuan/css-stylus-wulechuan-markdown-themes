{_selectorOf_tocByMarkdownItTOCDoneRight} {
    background-color: #222;
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.4);

    &,
    li > a[href^="#"] {
        color: #aaa;
    }


    & > ol > li,
    & > ul > li,
    &:not(.should-show-2-levels-at-most) li {

        &.has-nested-toc-list > a[href^="#"] {
            color: white;
        }
    }


    li > a[href^="#"]:hover {
        background-color: rgba(white, 0.15);
    }


    
    @media screen and (max-width: 1000px) {

        background-color: rgba(0, 0, 0, 0.91);

        @supports (backdrop-filter: blur(20px)) or (-webkit-backdrop-filter: blur(20px)) {
            background-color: rgba(0, 0, 0, 0.79);
        }

        @supports (backdrop-filter: blur(20px)) {
            backdrop-filter: blur(20px)
        }

        @supports (-webkit-backdrop-filter: blur(20px)) {
            -webkit-backdrop-filter: blur(20px)
        }
    }
}

.markdown-article-toc-toggling-button {
    color: black;
    border-color: #dd5075;
    background-color: #dd56c6;
    background-image: linear-gradient(45deg,#ff0dd6 20%,#faff27 80%);
    box-shadow: 0 0 0.3rem rgba(226, 22, 130, 0.97);
}

