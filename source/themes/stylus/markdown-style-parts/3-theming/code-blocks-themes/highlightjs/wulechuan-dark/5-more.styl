    color: #c75;

    .slash {
        opacity: 0.319;
    }

    .escaped-char {
    }
}

.hljs-string {

    .wlc-escape-char {
        color: #c75;

        .slash {
        }

        .escaped-char {
        }
    }
}

.hljs-regexp {

    &,
    .wlc-escape-char {
        color: #f6e;
    }

    .regexp-options {
        color: #3e1;
    }

    .regexp-selector-input-begin,
    .regexp-selector-input-end {
        color: #48f;
    }

    .regexp-body {
        background-color: rgba(#f6e, 0.08);
        // background-color: rgba(#fff, 0.06);
    }

    .wlc-escape-char {
        // color: #f75;

        .slash {
        }

        .escaped-char {
        }
    }


    .regexp-selector-char {

        &,
        &.wlc-escape-char {
            color: #4f9;
        }

        &.wlc-escape-char {

            .slash {
                opacity: 0.79;
            }

            .escaped-char {
            }
        }
    }

    .regexp-control-char {

        &,
        &.wlc-escape-char {
            color: #379;
        }

        &.wlc-escape-char {

            .slash {
                opacity: 0.79;
            }

            .escaped-char {
            }
        }
    }


    .wlc-digit-pair-between-curly-braces {

        .digit {
            color: #f63;
        }

        .comma {
            color: #666;
        }
    }
}
