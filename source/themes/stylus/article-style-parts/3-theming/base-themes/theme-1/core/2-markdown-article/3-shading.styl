/* 以下 CSS 是除代码块之外的页面整体着色方案。*/

{_selectorOf_markdownArticleRoot} {
    color: #797979;
    background-color: #151515;
    box-shadow: 0 0 0.2rem rgba(0, 0, 0, 0.79);
}





{__wrappingSelectorOf_markdownArticleBaseThemingRules} {

    a {
        transition-property: visibility, opacity, color, background-color, border, border-radius, transform;
        transition-duration: 0.3s;

        &:visited,
        & {
            color: #68f;
        }

        &:hover,
        &:focus,
        &:active {
            color: #f86;
        }
    }

    a[href^="#"] {
        // So-called page local links.
        // They point to the page they are in.

        &:visited,
        & {
            color: #7d5;
        }

        // &:hover,
        // &:focus,
        // &:active {
        //     color: #7d5;
        // }
    }

    a{_selectorOf_markdownArticleHeadingsPermantLinkAnchors}[href^="#"] {
        // Permanent links created by
        // markdown-it plugin: markdown-it-anchor

        &:visited,
        & {
            color: #282828;
        }
    }

    h1, h2, h3, h4, h5, h6 {

        &:hover > a{_selectorOf_markdownArticleHeadingsPermantLinkAnchors}[href^="#"] {
            color: #999;
        }
    }

    h1, h2, h3, h4, h5, h6 {

        > a{_selectorOf_markdownArticleHeadingsPermantLinkAnchors}[href^="#"] {
                
            &:hover,
            &:focus,
            &:active {
                color: #7d5;
            }
        }

        &:target:hover,
        &:target {

            > a{_selectorOf_markdownArticleHeadingsPermantLinkAnchors}[href^="#"] {
                color: #7d5;
            }
        }
    }



    h1, h2 {
        color: #a3a3a3;
    }

    h3, h4 {
        color: #515151;
    }
    
    h5, h6,
    dt {
        color: #636363;
    }




    img {
        color: #555;
        background-color: rgba(black, 0.219);
        box-shadow: inset 0 0 0.4rem rgba(black, 0.51);
    }




    input[type="checkbox"] + label {
        color: black;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
    }

    input[type="checkbox"]:checked + label {
        color: #696;
        text-shadow: -1px -1px 0 rgba(0, 128, 0, 0.1);
    }




    strong,
    b,
    em {
        color: #ccc;
    }



    blockquote {
        color: #969696;
        border-color: #794513;
        background-color: rgba(136, 136, 136, 0.2);
        text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.15);
    }



    table {
        border-color: #555;
        background-color: #111;
    }

    thead tr,
    th {
        border-color: #4c4c4c;
    }

    td {
        border-color: #222;
    }

    thead {
        color: #000;
        background-color: #454545;
    }

    tbody {
        tr:nth-child(odd) {
            background-color: transparent;
        }

        tr:nth-child(even) {
            background-color: rgba(white, 0.051);
        }
    }


    code,
    kbd {
        text-shadow: none !important;
    }

    code {
        color: #c7a;
        border-color: rgba(white, 0.219);
        background-color: #000;
    }

    pre code {
        background-color: transparent !important;
    }

    kbd {
        // color: #fff;
        // background-color: #789abc;
        // border-color: #fff;
        // box-shadow: 1px 1px 1px 0 rgba(0, 0, 0, 0.219);

        color #ddd;
        background-color: #151515;
        background-image: linear-gradient(45deg, black, #151515);
        border-color: #333 #454545 #454545 #333;
        box-shadow: 0rem 0.15rem 0 0.05rem #333;
    }



    hr {
        color: rgba(128, 128, 128, 0.45);
        background-image: linear-gradient(to right, transparent, currentColor 150%);
    }

    hr::before {
        box-shadow: inset 1px 1px 2px 0 rgba(0, 0, 0, 0.51);
    }
}
