@media screen and (min-width: 1001px) {

    {_selectorOf_tocByMarkdownItTOCDoneRight} li.is-collapsed {

        > li,
        > ol {
            display: none;
        }
    }
}

@media screen and (max-width: 1000px) {

    {_selectorOf_markdownArticleParent}.markdown-article-toc-exists.markdown-article-toc-is-visible {
        margin-left: 0;
    }

    {_selectorOf_tocByMarkdownItTOCDoneRight} {
        width: tocPanel_widthWhenWindowWidthNoMoreThan1000;
    }

    .markdown-article-toc-toggling-button {
        left: -0.5rem;
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }

    .markdown-article-toc-is-visible .markdown-article-toc-toggling-button {
        left: (tocPanel_widthWhenWindowWidthNoMoreThan1000 / 2);
        border-top-left-radius: 2rem;
        border-bottom-left-radius: 2rem;
    }
}

@media screen and (max-width: 600px) {

    {_selectorOf_tocByMarkdownItTOCDoneRight} {
        width: tocPanel_widthWhenWindowWidthNoMoreThan600;
    }

    .markdown-article-toc-toggling-button,
    .markdown-article-toc-is-visible .markdown-article-toc-toggling-button {
        left: (tocPanel_widthWhenWindowWidthNoMoreThan600 / 2);
        transform: translateX(-50%);
    }
}
