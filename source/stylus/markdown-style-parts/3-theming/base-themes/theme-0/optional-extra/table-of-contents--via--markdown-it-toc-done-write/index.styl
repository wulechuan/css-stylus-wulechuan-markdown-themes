{_selectorOf_tocByMarkdownItTOCDoneRight} {
    background-color: #222;
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.4);

    &,
    li > a[href^="#"] {
        color: #aaa;
    }

    if (_shouldNotOnlyShow2LevelsOfTOCItems) {
        li.has-nested-toc-list > a[href^="#"] {
            color: white;
        }
    } else {
        > ol,
        > ul {
            li.has-nested-toc-list > a[href^="#"] {
                color: white;
            }
        }
    }

    li > a[href^="#"]:hover {
        background-color: rgba(white, 0.15);
    }
}

.markdown-article-toc-toggling-button {
    color: white;
    background-color: #111;
    box-shadow: 0 0 0.3rem rgba(0, 0, 0, 0.7);
}

.markdown-article-toc-is-visible .markdown-article-toc-toggling-button {
    color: black;
    background-color: #eee;
    /* box-shadow: 0 0 0.3rem rgba(255, 255, 255, 0.7); */
}

.markdown-article-toc-is-visible .markdown-article-toc-toggling-button,
.markdown-article-toc-toggling-button {

    &:focus {
        outline: none;
        box-shadow: 0 0 0 4px rgb(18, 202, 18);
    }
}
