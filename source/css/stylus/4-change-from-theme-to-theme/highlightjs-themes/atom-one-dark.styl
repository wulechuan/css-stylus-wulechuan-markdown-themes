/*
    以下 CSS 为针对由 highlight.js 所构造的代码块的视觉样式之方案。
    其内容之主体，来源于
        https://highlightjs.org/static/demo/
    中的【Atom One Dark】主题。
*/


/* for CodeMirror(e.g. Typora) begin */
.CodeMirror-selected {
    background-color: rgba(255, 255, 255, 0.15) !important;
}

.CodeMirror-selectedtext {
    color: black !important;
    background-color: rgba(255, 255, 255, 0.319) !important;
}

.CodeMirror div.CodeMirror-cursor {
    border-left-color: rgb(255, 238, 88);
}
/* for CodeMirror(e.g. Typora) begin */




/* for CodeMirror(e.g. Typora) begin */
.CodeMirror-scroll,
/* for CodeMirror(e.g. Typora) begin */
/* for CodeMirror(e.g. Typora) end */
pre,
.hljs {
    color: #abb2bf;
    background-color: #282c34;
}


/* for CodeMirror(e.g. Typora) begin */
.cm-s-inner .cm-comment,
.cm-comment,
/* for CodeMirror(e.g. Typora) end */
.hljs-comment,
.hljs-quote {
    color: #000;
    background-color: #23ff7e;
    font-style: italic
}


/* for CodeMirror(e.g. Typora) begin */
.cm-s-inner .cm-keyword,
.cm-keyword,
/* for CodeMirror(e.g. Typora) end */
.hljs-doctag,
.hljs-keyword,
.hljs-formula {
    color: #c678dd
}



/* for CodeMirror(e.g. Typora) begin */
.cm-s-inner .cm-tag.cm-bracket,
.cm-s-inner .cm-atom,
.cm-s-inner .cm-operator,
.cm-tag.cm-bracket,
.cm-atom,
.cm-operator
/* for CodeMirror(e.g. Typora) end */ {
    color: inherit;
}


/* for CodeMirror(e.g. Typora) begin */
.cm-s-inner .cm-tag,
.cm-tag,
/* for CodeMirror(e.g. Typora) end */
.hljs-section,
.hljs-name,
.hljs-selector-tag,
.hljs-deletion,
.hljs-subst {
    color: #e06c75
}

.hljs-literal {
    color: #56b6c2
}


/* for CodeMirror(e.g. Typora) begin */
.cm-s-inner .cm-property,
.cm-s-inner .cm-string,
.cm-property,
.cm-string,
/* for CodeMirror(e.g. Typora) end */
.hljs-string,
.hljs-regexp,
.hljs-addition,
.hljs-attribute,
.hljs-meta-string {
    color: #98c379
}


/* for CodeMirror(e.g. Typora) begin */
.cm-s-inner .cm-variable,
.cm-s-inner .cm-variable-2,
.cm-variable-2,
.cm-variable,
/* for CodeMirror(e.g. Typora) end */
.hljs-built_in,
.hljs-class .hljs-title {
    color: #e6c07b
}


/* for CodeMirror(e.g. Typora) begin */
.cm-s-inner .cm-number,
.cm-s-inner .cm-attribute,
.cm-s-inner .cm-qualifier,
.cm-number,
.cm-attribute,
.cm-qualifier,
/* for CodeMirror(e.g. Typora) end */
.hljs-attr,
.hljs-variable,
.hljs-template-variable,
.hljs-type,
.hljs-selector-class,
.hljs-selector-attr,
.hljs-selector-pseudo,
.hljs-number {
    color: #d19a66
}

/* for CodeMirror(e.g. Typora) begin */
.cm-s-inner .cm-def,
.cm-s-inner .cm-builtin,
.cm-def,
.cm-builtin,
/* for CodeMirror(e.g. Typora) end */
.hljs-symbol,
.hljs-bullet,
.hljs-link,
.hljs-meta,
.hljs-selector-id,
.hljs-title {
    color: #61aeee
}

.hljs-emphasis {
    font-style: italic
}

.hljs-strong {
    font-weight: bold
}

.hljs-link {
    text-decoration: underline
}




