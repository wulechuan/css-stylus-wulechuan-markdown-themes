{_selectorOf_markdownArticleParent}.markdown-article-toc-exists.markdown-article-toc-is-visible {
    margin-left: tocPanel_defaultWidth;
}

{_selectorOf_tocByMarkdownItTOCDoneRight} {
    display: none;
}

.markdown-article-toc-is-visible {_selectorOf_tocByMarkdownItTOCDoneRight} {
    display: block;
}



.markdown-article-toc-toggling-button {
    font-size: 20px;

    @media screen and (min-width: 1960px) {
        font-size 36px
    }

    @media screen and (min-width: 2600px) {
        font-size 50px
    }

    // @media screen and (max-width: 900px) {
    //     font-size: 18px;
    // }

    @media screen and (max-width: 600px) {
        font-size: 16px;
    }

    box-sizing: content-box;
    display: block;
    border: 1px solid transparent;
    height: 1em;
    width: 1.6em;
    padding: 0.25em 1em;
    border-radius: 0 219px 219px 0;

    position: fixed;
    top: 1em;

    cursor: pointer;

    transition: all 0.3s;
    
    left: -0.5em;
    transform: translateX(0);

    &:active,
    &:focus {
        outline: none;
    }
}

.markdown-article-toc-is-visible .markdown-article-toc-toggling-button {
    left: (tocPanel_defaultWidth / 2);
    transform: translateX(-50%);
    border-top-left-radius: 219px;
    border-bottom-left-radius: 219px;
}

.markdown-article-toc-toggling-button::before {
    display block
    font-size 0.8em
    height 1.25em
    line-height 1.25em
    overflow visible
    content: 'TOC';
    font-family: sans-serif;
}

{languageSelectors('zh', 'hans', 'CN')} {

    .markdown-article-toc-toggling-button::before {
        content: '目录';
        font-family: inherit;
    }
}
